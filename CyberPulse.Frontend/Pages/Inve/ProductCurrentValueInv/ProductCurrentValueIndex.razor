@page "/productcurrentvalues"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@productCurrentValues"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">

        <ToolBarContent>
            <div class="d-flex justify-content-between">
                <MudText Typo="Typo.h6" Class="me-4"> @Localizer["ProductCurrentValue"]</MudText>
                <div class="mx-1">
                    <MudButton Variant="Variant.Outlined"
                               EndIcon="@Icons.Material.Filled.Add"
                               Color="Color.Info" 
                               OnClick="@(() => ShowModalAsync())">
                        @Localizer["New"]
                    </MudButton>
                    <MudButton Variant="Variant.Outlined"
                               EndIcon="@Icons.Material.Filled.Update"
                               Color="Color.Info" 
                               OnClick="@(() => ShowProductAllAsync())">
                        @Localizer["ProductAllPercentage"]
                    </MudButton>

                </div>
            </div>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>

        <HeaderContent>
            <MudTh>@Localizer["Validity"]</MudTh>
            <MudTh>@Localizer["Product"]</MudTh>
            <MudTh>@Localizer["Description"]</MudTh>
            <MudTh>@Localizer["PriceLow"]</MudTh>
            <MudTh>@Localizer["PriceHigh"]</MudTh>
            <MudTh>@Localizer["Worth"]</MudTh>
            <MudTh>@Localizer["Iva"]</MudTh>
            <MudTh>@Localizer["Percentage"]</MudTh>
            <MudTh Class="text-center">@Localizer["Actions"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Validity!.Value</MudTd>
            <MudTd>@context.Product!.Name</MudTd>
            <MudTd>@context.Product!.Description</MudTd>
            <MudTd>@context.PriceLow.ToString("N2")</MudTd>
            <MudTd>@context.PriceHigh.ToString("N2")</MudTd>
            <MudTd>@context.Worth.ToString("N2")</MudTd>
            <MudTd>@context.Iva!.Name</MudTd>
            <MudTd>@context.Percentage</MudTd>
            <MudTd Class="text-center">
                <MudTooltip Text="@Localizer["Edit"]">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Warning"
                               OnClick="@(() => ShowModalAsync(context.Id, true))">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    </MudButton>
                </MudTooltip>
                <MudTooltip Text="@Localizer["Delete"]">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               OnClick="@(() => DeleteAsync(@context))">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" />
                    </MudButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>@Localizer["NoRecords"]</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString=@Localizer["RecordsNumber"]
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText=@Localizer["All"]
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>
}