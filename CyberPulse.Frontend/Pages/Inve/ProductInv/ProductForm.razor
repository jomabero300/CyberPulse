					 Value="selectedBudgetType"
					 ValueChanged="BudgetTypeChanged"
					 ToStringFunc="@(e=> e==null?null : $"{e.Name}")"
					 For="@(() => BudgetDTO.BudgetType)">
		<ItemTemplate Context="itemContext">
			@itemContext.Name
		</ItemTemplate>
	</MudAutocomplete>
