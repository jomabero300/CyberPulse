@page "/courseprogramlots"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@CourseProgramLots"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">
        <ToolBarContent>
            <div class="d-flex justify-content-between">
                <MudText Typo="Typo.h6" Class="me-4"> @Localizer["CourseLot"]</MudText>
                <div class="mx-1">
                    <MudButton Variant="Variant.Outlined"
                               EndIcon="@Icons.Material.Filled.Add"
                               Color="Color.Info" OnClick="@(() => ShowModalAsync())">
                        @Localizer["New"]
                    </MudButton>
                    <MudButton Variant="Variant.Outlined"
                               StartIcon="@Icons.Material.Filled.PictureAsPdf"
                               Color="Color.Primary" OnClick="@(() => ShowPdfAsync())">
                        @Localizer["ReportPdf"]
                    </MudButton>

                </div>
            </div>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>@Localizer["Id"]</MudTh>
            <MudTh>@Localizer["Program"]</MudTh>
            <MudTh>@Localizer["Lot"]</MudTh>
            <MudTh>@Localizer["Course"]</MudTh>
            <MudTh Class="text-center">@Localizer["Actions"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Id</MudTd>
            <MudTd>@context.ProgramLot!.Program!.Name</MudTd>
            <MudTd>@context.ProgramLot!.Lot!.Name</MudTd>
            <MudTd>@context.Course!.Name</MudTd>
            <MudTd Class="text-center">
                <MudTooltip Text="@Localizer["Delete"]">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               OnClick="@(() => DeleteAsync(@context))">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" />
                    </MudButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>@Localizer["NoRecords"]</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString=@Localizer["RecordsNumber"]
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText=@Localizer["All"]
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>
}