@page "/Stocktaking"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@BudgetCourses"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">
        <ToolBarContent>
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>@Localizer["Code"]</MudTh>
            <MudTh>@Localizer["Course"]</MudTh>
            <MudTh>@Localizer["StartDate"]</MudTh>
            <MudTh>@Localizer["EndDate"]</MudTh>
            <MudTh>@Localizer["Worth"]</MudTh>
            <MudTh>@Localizer["Statu"]</MudTh>
            <MudTh Class="text-center">@Localizer["Actions"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.CourseProgramLot!.Course!.Code</MudTd>
            <MudTd>@context.CourseProgramLot!.Course!.Name</MudTd>
            <MudTd>@context.StartDate!.Value.ToShortDateString()</MudTd>
            <MudTd>@context.EndDate!.Value.ToShortDateString()</MudTd>
            <MudTd>@context.Worth.ToString("N2")</MudTd>
            <MudTd>@context.Statu!.Name</MudTd>
            <MudTd Class="text-center">
                @if (context.StatuId == 6)
                {
                    <MudTooltip Text="@Localizer["New"]">
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   OnClick="@(() => ShowModalAsync(context))">
                            <MudIcon Icon="@Icons.Material.Filled.Edit" />
                        </MudButton>
                    </MudTooltip>
                    <MudTooltip Text="@Localizer["Delete"]">
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Error"
                                   OnClick="@(() => DeleteAsync(@context))">
                            <MudIcon Icon="@Icons.Material.Filled.Delete" />
                        </MudButton>
                    </MudTooltip>
                    <MudTooltip Text="@Localizer["Send"]">
                        <MudButton Size="Size.Small"
                                   Disabled="@lbEsta"
                                   Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   OnClick="@(() => SendAsync(context))">
                            <MudIcon Icon="@Icons.Material.Filled.Send" />
                        </MudButton>
                    </MudTooltip>

                }
                else if (context.StatuId == 8)
                {
                    <MudTooltip Text="@Localizer["Edit"]">
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Warning"
                                   OnClick="@(() => ShowModalAsync(context,true))">
                            <MudIcon Icon="@Icons.Material.Filled.Edit" />
                        </MudButton>
                    </MudTooltip>                    
                }
                @if(context.StatuId > 6)
                {
                    <MudTooltip Text="@Localizer["ChipView"]">
                        <MudButton Size="Size.Small"
                                   Disabled="@lbEsta"
                                   Variant="Variant.Filled"
                                   Color="Color.Info"
                                   OnClick="@(() => PrevioAsync(context.Id))">
                            <MudIcon Icon="@Icons.Material.Filled.Preview" />
                        </MudButton>
                    </MudTooltip>

                }

            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>@Localizer["NoRecords"]</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString=@Localizer["RecordsNumber"]
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText=@Localizer["All"]
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>
}